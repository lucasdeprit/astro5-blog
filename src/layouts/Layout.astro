---
import { ClientRouter } from 'astro:transitions';
interface Props {
	title: String;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
		<ClientRouter />
	</head>
	<body>
		<div class="main-content">
			<slot />
		</div>
	</body>
</html>

<style>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		/* color: #fff; */
		@apply text-slate-300;
	}
	
	body {
		@apply h-screen bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:20px_40px];
	}

	.main-content {
		@apply grid pt-20 mx-auto w-[100%] sm:w-[80%];
	}

	body > div {
		@apply container;
	}


</style>
