---
import { ClientRouter } from 'astro:transitions';
// import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <!-- <Header /> -->
    <div class="main-content">
      <slot />
    </div>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
    background: #13151a; 
    @apply text-slate-200;
  }

  body {
    @apply min-h-screen bg-gradient-to-r from-gray-800 to-gray-900;
  }

  .main-content {
    @apply mx-auto w-[90%] sm:w-[80%] md:w-[70%] xl:w-[60%] pb-32 pt-20 flex flex-col gap-6;
  }

  h1,
  h2 {
    font-weight: bold;
    color: #fff;
  }

  h1 {
    @apply text-4xl sm:text-5xl leading-tight;
  }

  h2 {
    @apply text-2xl sm:text-3xl text-gray-300;
  }

  a {
    @apply text-gray-300 hover:text-gray-500 transition-colors duration-200;
  }

  img.rounded {
    @apply rounded-full shadow-md;
  }

  span.text-xs {
    @apply text-gray-400;
  }
</style>

